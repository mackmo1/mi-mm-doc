# ===========================================
# Kh-doc Next.js Environment Variables
# ===========================================
# Copy this file to .env.local and update the values

# -------------------------------------------
# Backend API Configuration (BFF Layer)
# -------------------------------------------
# The URL of the Express/PostgreSQL backend (server-side only)
BACKEND_URL=http://localhost:5000

# -------------------------------------------
# Public API Configuration
# -------------------------------------------
# Base URL for Next.js API routes (available in browser)
NEXT_PUBLIC_API_URL=/api

# -------------------------------------------
# Application Settings
# -------------------------------------------
NODE_ENV=development
PORT=3000

# -------------------------------------------
# Feature Flags
# -------------------------------------------
NEXT_PUBLIC_ENABLE_EDITOR_DEBUG=false

# -------------------------------------------
# Security (uncomment when implementing auth)
# -------------------------------------------
# JWT_SECRET=your-secret-key-here
# API_KEY=your-api-key-here

